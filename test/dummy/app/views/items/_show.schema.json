{
  "summary": "Get an item",
  "parameters": [
    {
      "name": "id",
      "in": "path",
      "required": true,
      "schema": { "type": "integer" }
    }
  ],
  "responses": {
    "200": {
      "description": "A single item",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "required": ["id", "name"],
            "properties": {
              "id": { "type": "integer" },
              "name": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
